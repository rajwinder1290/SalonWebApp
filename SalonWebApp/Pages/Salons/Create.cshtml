@page
@model SalonWebApp.Pages.Salons.CreateModel

@{
    ViewData["Title"] = "Create";
}

<div class="container">
    <h1 class="text-center">Add New Salon Details</h1>
    <hr />
    <div class="row">
        <div class="col-md-4">
            <img src="~/images/operation.png" class="img-fluid" />
        </div>
        <div class="col-md-8">
            <form method="post">
                <div asp-validation-summary="ModelOnly" class="text-danger"></div>

                <div class="form-group">
                    <label asp-for="Salon.RegionID" class="control-label">Choose Region:</label>
                    <select asp-for="Salon.RegionID" class="form-control" asp-items="ViewBag.RegionID"></select>
                </div>
                <div class="form-group">
                    <label asp-for="Salon.SalonName" class="control-label">Saloon Name:</label>
                    <input asp-for="Salon.SalonName" class="form-control" />
                    <span asp-validation-for="Salon.SalonName" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="Salon.Address" class="control-label">Saloon Address:</label>
                    <textarea asp-for="Salon.Address" class="form-control"></textarea>
                    <span asp-validation-for="Salon.Address" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="Salon.Phone" class="control-label">Saloon Phone:</label>
                    <input asp-for="Salon.Phone" class="form-control" />
                    <span asp-validation-for="Salon.Phone" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <input type="submit" value="Save Details" class="btn btn-primary" />
                </div>
            </form>
        </div>
    </div>
</div>
    @section Scripts {
        @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
    }
