@page
@model SalonWebApp.Pages.Categories.DeleteModel

@{
    ViewData["Title"] = "Delete";
}

<div class="container">
    <h1 class="text-center">Delete Category Details</h1>

    <div>
        <h4>Are you sure you want to delete this Category?</h4>
        <hr />
        <dl class="row">
            <dt class="col-sm-2">
                @Html.DisplayNameFor(model => model.Category.CategoryName)
            </dt>
            <dd class="col-sm-10">
                @Html.DisplayFor(model => model.Category.CategoryName)
            </dd>
        </dl>

        <form method="post">
            <input type="hidden" asp-for="Category.Id" />
            <input type="submit" value="Delete Details" class="btn btn-danger" />
        </form>
    </div>
</div>